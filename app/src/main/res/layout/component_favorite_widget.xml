<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comp_favorite_root_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="4dp"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/comp_favorite_user_container_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comp_favorite_profile_siv"
            android:layout_width="200dp"
            android:layout_height="155dp"
            android:contentDescription="@string/profile_picture"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/user1" />

        <TextView
            android:id="@+id/comp_favorite_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Jake Wharton" />
    </LinearLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@id/comp_favorite_user_container_ll"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/favorite_icon"
        android:src="@drawable/ic_favorite_red_24dp" />
</RelativeLayout>